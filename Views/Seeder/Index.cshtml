@{
    ViewBag.Title = "Database Seeder";
}

<div style="max-width: 600px; margin: 50px auto; padding: 20px; border: 1px solid #ddd; border-radius: 5px;">
    <h2>Database Seeder</h2>

    @if (ViewBag.Message != null)
    {
        <div style="padding: 15px; margin: 20px 0; border-radius: 4px; background-color: @(ViewBag.Success ? "#d4edda" : "#f8d7da"); color: @(ViewBag.Success ? "#155724" : "#721c24"); border: 1px solid @(ViewBag.Success ? "#c3e6cb" : "#f5c6cb");">
            @ViewBag.Message
        </div>
    }

    <p>This will add fake data to your database:</p>
    <ul>
        <li>15 Study Groups</li>
        <li>50 Sessions</li>
        <li>100 Ratings</li>
    </ul>

    <p><strong>Note:</strong> Your existing Users and Subjects will not be affected.</p>

    @using (Html.BeginForm("SeedData", "Seeder", FormMethod.Post))
    {
        <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
            Seed Database
        </button>
    }

    <br /><br />
    <a href="@Url.Action("Index", "Home")">Back to Home</a>
</div>