@model StudyGroups.Models.Session
@{
    ViewBag.Title = "Delete Session";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <h2 class="mb-4 text-danger">Delete Session</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Error!</h5>
                    <p class="mb-0">@TempData["Error"]</p>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Are you sure you want to delete this session?</h5>
                    <p class="mb-0">This action cannot be undone.</p>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Session Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Study Group</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StudyGroup.Name)
                            <br />
                            <small class="text-muted">@Html.DisplayFor(model => model.StudyGroup.Subject.Title)</small>
                        </dd>
                        <dt class="col-sm-4">Creator</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Creator.FirstName) @Html.DisplayFor(model => model.Creator.LastName)
                        </dd>
                        <dt class="col-sm-4">Date & Time</dt>
                        <dd class="col-sm-8">
                            @Model.Date.ToString("MMM dd, yyyy")
                            <br />
                            <small class="text-muted">@Model.Date.ToString("h:mm tt")</small>
                        </dd>
                        <dt class="col-sm-4">Duration</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Duration) minutes
                        </dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsFinished)
                            {
                                <span class="badge bg-secondary">Finished</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Upcoming</span>
                            }
                        </dd>
                        <dt class="col-sm-4">Attendees</dt>
                        <dd class="col-sm-8">
                            @(Model.Attendees?.Count ?? 0) / @Model.MaxAttendees
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-2">
                            @* Disable delete button if there's an error *@
                            @if (TempData["CannotDelete"] != null)
                            {
                                <button type="button" class="btn btn-danger" disabled>Delete</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                            @Html.ActionLink("Cancel", "Details", new { id = Model.SessionID }, new { @class = "btn btn-outline-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>