@{
    ViewBag.Title = "Access Denied";
}

<div class="jumbotron">
    <h1>Access Denied</h1>
    <p class="lead">You don't have permission to access this page.</p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <p>@Html.ActionLink("Go back to home", "Index", "Home", null, new { @class = "btn btn-primary btn-lg" })</p>
</div>