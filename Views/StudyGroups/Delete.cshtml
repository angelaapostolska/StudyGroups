@model StudyGroups.Models.StudyGroup
@{
    ViewBag.Title = "Delete";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <h2 class="mb-4 text-danger">Delete Study Group</h2>

            @* Show error if it exists *@
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error!</strong> @TempData["Error"]
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this study group?
                    This action cannot be undone.
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-muted">Name</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-muted">Subject</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Subject.Title)
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-muted">Description</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-muted">Created By</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Creator.FirstName) @Html.DisplayFor(model => model.Creator.LastName)
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-muted">Members</strong>
                        </div>
                        <div class="col-md-8">
                            @(Model.Members?.Count ?? 0) member(s)
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-muted">Sessions</strong>
                        </div>
                        <div class="col-md-8">
                            @{
                                var upcomingCount = Model.Sessions?.Count(s => !s.IsFinished) ?? 0;
                                var finishedCount = Model.Sessions?.Count(s => s.IsFinished) ?? 0;
                            }
                            @upcomingCount upcoming session(s), @finishedCount finished session(s)
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-2 mt-4">
                            @* Disable delete button if there's an error *@
                            @if (TempData["CannotDelete"] != null)
                            {
                                <button type="button" class="btn btn-danger" disabled>Delete</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>