@model StudyGroups.Models.StudyGroup
@{
    ViewBag.Title = "Details";
    int currentUserId = (int)Session["UserID"];
    bool isCreator = Model.CreatorUserID == currentUserId;
    bool isMember = Model.Members != null && Model.Members.Any(m => m.UserID == currentUserId);
    bool canCreateSession = isCreator || isMember;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">@Model.Name</h2>
                    @if (isCreator)
                    {
                        <span class="badge bg-primary">You are the creator</span>
                    }
                    else if (isMember)
                    {
                        <span class="badge bg-success">You are a member</span>
                    }
                </div>
                <div class="d-flex gap-2">
                    @if (isCreator)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.StudyGroupID }, new { @class = "btn btn-warning" })
                    }
                    else if (isMember)
                    {
                        
                            using (Html.BeginForm("Leave", "StudyGroups", new { id = Model.StudyGroupID }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to leave this study group?');">Leave Group</button>
                            }
                        
                    }
                    else
                    {
                        
                            using (Html.BeginForm("Join", "StudyGroups", new { id = Model.StudyGroupID }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">Join Group</button>
                            }
                        
                    }
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>

            <div class="row g-3 mb-4">

                <div class="col-md-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-book text-primary me-2" viewBox="0 0 16 16">
                                    <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
                                </svg>
                                <h6 class="mb-0 text-muted">Subject</h6>
                            </div>
                            <p class="mb-0 fs-5">@Model.Subject.Title</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person text-primary me-2" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                </svg>
                                <h6 class="mb-0 text-muted">Created By</h6>
                            </div>
                            <p class="mb-0 fs-5">@Model.Creator.FirstName @Model.Creator.LastName</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-people text-primary me-2" viewBox="0 0 16 16">
                                    <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z" />
                                </svg>
                                <h6 class="mb-0 text-muted">Members</h6>
                            </div>
                            <p class="mb-0 fs-5">@(Model.Members?.Count ?? 0) members</p>
                        </div>
                    </div>
                </div>

            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Description</h5>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Study Sessions</h5>
                    @if (canCreateSession)
                    {
                        @Html.ActionLink("Create Session", "CreateForStudyGroup", "Sessions", new { id = Model.StudyGroupID }, new { @class = "btn btn-sm btn-primary" })
                    }
                </div>
                <div class="card-body">
                    @if (canCreateSession)
                    {
                        if (Model.Sessions != null && Model.Sessions.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Duration</th>
                                            <th>Created By</th>
                                            <th>Attendees</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var session in Model.Sessions.OrderBy(s => s.Date))
                                        {
                                            <tr>
                                                <td>@session.Date.ToString("MMM dd, yyyy hh:mm tt")</td>
                                                <td>@session.Duration min</td>
                                                <td>
                                                    @if (session.Creator != null)
                                                    {
                                                        @session.Creator.FirstName @session.Creator.LastName
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@(session.Attendees != null ? session.Attendees.Count : 0) / @session.MaxAttendees</span>
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Details", "Details", "Sessions", new { id = session.SessionID }, new { @class = "btn btn-sm btn-primary" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-calendar-x text-muted mb-3" viewBox="0 0 16 16">
                                    <path d="M6.146 7.146a.5.5 0 0 1 .708 0L8 8.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 9l1.147 1.146a.5.5 0 0 1-.708.708L8 9.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 9 6.146 7.854a.5.5 0 0 1 0-.708z" />
                                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                                </svg>
                                <p class="text-muted mb-0">No sessions scheduled for this group yet.</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0" role="alert">
                            <h6 class="alert-heading">Access Restricted</h6>
                            <p class="mb-0">Only members of this study group can view sessions. Please join this group to see available sessions.</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Members</h5>
                </div>
                <div class="card-body">
                    @if (Model.Members != null && Model.Members.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.Members)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2"
                                                         style="width: 32px; height: 32px; font-size: 14px; font-weight: 600;">
                                                        @member.FirstName[0]@member.LastName[0]
                                                    </div>
                                                    @member.FirstName @member.LastName
                                                </div>
                                            </td>
                                            <td>@member.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-people text-muted mb-3" viewBox="0 0 16 16">
                                <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z" />
                            </svg>
                            <p class="text-muted mb-0">No members in this group yet.</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>