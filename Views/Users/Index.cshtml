@model IEnumerable<StudyGroups.Models.UserListViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-people-fill me-2" viewBox="0 0 16 16" style="vertical-align: middle;">
                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
            </svg>
            All Users
        </h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="px-4 py-3">Name</th>
                                <th scope="col" class="px-4 py-3">Email</th>
                                <th scope="col" class="px-4 py-3 text-center">Study Groups</th>
                                <th scope="col" class="px-4 py-3 text-center">Sessions</th>
                                <th scope="col" class="px-4 py-3">Joined Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                                 style="width: 40px; height: 40px; font-size: 14px; font-weight: 600; flex-shrink: 0;">
                                                @{
                                                    var nameParts = user.FullName.Split(' ');
                                                    var initials = nameParts.Length >= 2
                                                        ? nameParts[0].Substring(0, 1) + nameParts[nameParts.Length - 1].Substring(0, 1)
                                                        : nameParts[0].Substring(0, Math.Min(2, nameParts[0].Length));
                                                }
                                                @initials.ToUpper()
                                            </div>
                                            <strong>@user.FullName</strong>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-muted">@user.Email</td>
                                    <td class="px-4 py-3 text-center">
                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2" style="font-size: 14px;">
                                            @user.StudyGroupsCount
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        <span class="badge bg-info text-dark rounded-pill px-3 py-2" style="font-size: 14px;">
                                            @user.SessionsCount
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-muted">
                                        <small>@user.FormattedJoinedDate</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <small>Total Users: <strong>@Model.Count()</strong></small>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
            </svg>
            No users found in the system.
        </div>
    }
</div>